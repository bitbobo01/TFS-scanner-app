<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradientbg"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:text="TFS SCANNER"
        android:textColor="#5a9216"
        android:textSize="30sp" />
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/logo"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_below="@id/title"
    android:background="@drawable/ic_banana"
    android:layout_centerHorizontal="true"

    />
<Button
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/logo"
    android:id="@+id/scan_barcode_button"
    android:layout_width="200dp"
    android:padding="10dp"
    android:drawableLeft="@drawable/ic_baseline_camera_24px"
    android:background="#c5e1a5"
    android:layout_height="wrap_content"
    android:text="Quét Mã BarCode"/>
    <Button
        android:id="@+id/history_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#c5e1a5"
        android:layout_below="@+id/scan_barcode_button"
        android:layout_width="200dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_history_24px"
        android:text="Xem Lịch Sử Quét Mã"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/history_button"
        android:layout_centerHorizontal="true"
        android:text="Phần mềm bản quyền thuộc về TFS team"
        />


</RelativeLayout>







</FrameLayout>