<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/barcode_result"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="612dp"
        android:text="Quét Mã"
        android:textColor="@color/colorBlack"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/ip_config"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_marginTop="75dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/FoodId_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/FoodBreed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FoodId_text"
                android:text=" "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Category_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FoodBreed_text"
                android:text=" "
                android:textSize="24sp" />

            <View
                android:id="@+id/FarmLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/Category_text"
                android:layout_marginTop="10dp"
                android:background="#3A3A3A"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/FarmName_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FarmLine"
                android:layout_marginTop="10dp"
                android:text=" "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/FarmAddress_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FarmName_text"
                android:text=" "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/FarmFeeding_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FarmAddress_text"
                android:text=" "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/FarmVaccine_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FarmFeeding_text"
                android:text=" "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/CertiDate_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FarmVaccine_text"
                android:text=" "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/CertiNum_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CertiDate_text"
                android:text=" "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/FoodSentDate_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CertiNum_text"
                android:text=" "
                android:textSize="24sp" />
            <View
                android:id="@+id/ProviderLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/FoodSentDate_text"
                android:background="#3A3A3A"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/Provider_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ProviderLine"
                android:text=" "
                android:textSize="24sp" />
            <View
                android:id="@+id/DistributorLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/Provider_text"
                android:background="#3A3A3A"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/Distributor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DistributorLine"
                android:layout_alignParentBottom="true"
                android:textSize="24sp"
                 />


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorCyanLight"
        app:itemIconTint="@color/colorBlack"
        app:itemTextColor="@color/colorBlack"
        app:menu="@menu/bottom_navigation_menu"/>

</FrameLayout>