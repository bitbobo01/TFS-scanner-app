                android:textSize="20sp" />

            <TextView
                android:id="@+id/Category_text"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FoodBreed_text"
                android:text=" "
                android:textSize="20sp" />
            <ExpandableListView
